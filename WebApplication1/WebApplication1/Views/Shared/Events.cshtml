@model VetsEvents.ViewModels.EventsViewModel
@{
    ViewBag.Title = Model.Title;
}
<h2 class="voffset5">@Model.Title</h2>
<ul class="vetevents">
    @foreach (var vetEvent in Model.UpcomingEvents)
    {
    <li>
        <div class="date">
            <div class="month">
                @vetEvent.DateTime.ToString("MMM")
            </div>
            <div class="day">
                @vetEvent.DateTime.ToString("d ")
            </div>
        </div>
        <div class="details">
            <span class="organizer">
                @vetEvent.EventOrganizer.Name

                @if(vetEvent.IsCanceled)
                {
                    <span class="label label-warning">Cancelled</span>
                }
                @if (Model.IsAuthenticated)
                {
                    <button data-user-id="@vetEvent.EventOrganizerId" class="btn-link js-toggle-follower">Follow</button>
                }

            </span>
            <span class="eventtype">
                @vetEvent.EventType.Name
            </span>
                @if (Model.IsAuthenticated && !vetEvent.IsCanceled)
                {
                    <button data-event-id="@vetEvent.Id" class="btn btn-default btn-sm pull-right js-toggle-attendance">Going?</button>
                }
        </div>
    </li>
        
    }
</ul>
@section scripts {
    <script>
        $(document).ready(function () {
            $(".js-toggle-attendance").click(function (e) {
                var button = $(e.target)
                $.post("/api/attendances", { eventId: button.attr("data-event-id") })
                    .done(function () {
                        button.removeClass("btn-default")
                            .addClass("btn-info")
                            .text("Going!");
                    })
                    .fail(function () {
                        alert("Something failed!");
                    });
            });

            $(".js-toggle-follower").click(function (e) {
                var button = $(e.target)
                $.post("/api/followings", { followeeId: button.attr("data-user-id") })
                    .done(function () {
                        button.text("Following!")
                    })
                    .fail(function () {
                        alert("Something failed!")
                    })
            });
        });
    </script>
    }